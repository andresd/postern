{
  "name": "@postern/root",
  "private": true,
  "workspaces": [
    "packages/webApp",
    "packages/core",
    "packages/engine",
    "packages/cli"
  ],
  "devDependencies": {
    "lerna": "^4.0.0"
  },
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "build": "lerna bootstrap & lerna run build",
    "client-start": "lerna exec --scope @postern/cli -- yarn start",
    "client-package": "lerna exec --scope @postern/cli -- yarn package",
    "cli-start": "lerna exec --scope @postern/cli -- yarn start",
    "cli-test": "lerna exec --scope @postern/cli -- yarn test",
    "cli-publish": "lerna exec --scope @postern/cli -- yarn publish-cli",
    "engine-test": "lerna exec --scope @postern/engine -- yarn test",
    "engine-publish": "lerna exec --scope @postern/engine -- yarn publish-engine"
  },
  "dependencies": {
    "assert": "^2.0.0",
    "stream-http": "^3.2.0",
    "url": "^0.11.0"
  }
}